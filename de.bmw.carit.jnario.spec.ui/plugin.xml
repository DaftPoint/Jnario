            extensions="spec" label="Spec Compare">
     </viewer>
  </extension>
  <extension point="org.eclipse.ui.editors.documentProviders">
    <provider id="de.bmw.carit.jnario.spec.Spec.editors.documentProviders"
            class="de.bmw.carit.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.ui.editor.model.XtextDocumentProvider"
            extensions="spec">
    </provider>
  </extension>
  
  
   <extension point="org.eclipse.core.runtime.adapters">
     <factory 
        class="de.bmw.carit.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.xtend2.ui.launching.JavaElementDelegateAdapterFactory"
        adaptableType="org.eclipse.ui.IFileEditorInput">
        <adapter type="org.eclipse.xtext.xtend2.ui.launching.JavaElementDelegate"/>
     </factory>
     <factory 
        class="de.bmw.carit.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.xtend2.ui.launching.JavaElementDelegateAdapterFactory"
        adaptableType="org.eclipse.ui.IEditorPart">
        <adapter type="org.eclipse.xtext.xtend2.ui.launching.JavaElementDelegate"/>
     </factory>
     <factory 
        class="de.bmw.carit.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.xtend2.ui.launching.JavaElementDelegateAdapterFactory" 
        adaptableType="org.eclipse.core.resources.IResource">
        <adapter type="org.eclipse.xtext.xtend2.ui.launching.JavaElementDelegate"/>
     </factory>
     <factory 
        class="de.bmw.carit.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.xtend2.ui.launching.JavaElementDelegateAdapterFactory"
        adaptableType="org.eclipse.xtext.xtend2.ui.launching.JavaElementDelegate">
        <adapter type="org.eclipse.jdt.core.IJavaElement"/>
     </factory>
  </extension>
   
    <extension point="org.eclipse.jdt.core.classpathContainerInitializer">            
   		<classpathContainerInitializer                                          
			id="org.eclipse.xtend.XTEND_CONTAINER"                                                        
			class="org.eclipse.xtext.xtend2.ui.buildpath.XtendContainerInitializer"/>                           
	</extension>
	<extension
         point="org.eclipse.jdt.ui.classpathContainerPage">
      <classpathContainerPage
            name="%XtendLibrary_name"
            class="org.eclipse.xtext.xtend2.ui.buildpath.XtendContainerWizardPage"
            id="org.eclipse.xtend.XTEND_CONTAINER">
      </classpathContainerPage>
   </extension>
       <extension
         point="org.eclipse.ui.contexts">
      <context
            description="%SpecContext_description"
            id="de.bmw.carit.jnario.spec.ui.SpecEditorScope"
            name="%SpecContext_name"
            parentId="org.eclipse.xtext.ui.XtextEditorScope">
      </context>
   </extension>
    <extension
         point="org.eclipse.ui.bindings">
      <key
            contextId="de.bmw.carit.jnario.spec.ui.SpecEditorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+O"
            commandId="org.eclipse.xtext.xbase.ui.organizeImports">
      </key>
   </extension>
       <extension point="org.eclipse.ui.menus">
        <menuContribution
            locationURI="popup:#TextEditorContext?after=group.edit">
             <command
                 commandId="org.eclipse.xtext.xbase.ui.organizeImports"
                 style="push"
                 tooltip="Organize Imports">
            <visibleWhen checkEnabled="false">
                <reference
					definitionId="de.bmw.carit.jnario.spec.Spec.Editor.opened">
                </reference>
            </visibleWhen>
         </command>  
         </menuContribution>
    </extension>
