<plugin>

    <extension
            point="org.eclipse.ui.editors">
        <editor
            class="de.bmw.carit.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.ui.editor.XtextEditor"
            contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
            default="true"
            extensions="spec"
            id="de.bmw.carit.jnario.spec.Spec"
            name="Spec Editor">
        </editor>
    </extension>
    <extension
        point="org.eclipse.ui.handlers">
        <handler
            class="de.bmw.carit.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclarationHandler"
            commandId="org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclaration">
            <activeWhen>
                <reference
                    definitionId="de.bmw.carit.jnario.spec.Spec.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
        <handler
            class="de.bmw.carit.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.ui.editor.handler.ValidateActionHandler"
            commandId="de.bmw.carit.jnario.spec.Spec.validate">
         <activeWhen>
            <reference
                    definitionId="de.bmw.carit.jnario.spec.Spec.Editor.opened">
            </reference>
         </activeWhen>
      </handler>
            <handler
            class="de.bmw.carit.jnario.spec.ui.SpecExecutableExtensionFactory:de.bmw.carit.jnario.spec.ui.edit.OrganizeImportsHandler"
            commandId="org.eclipse.xtext.xbase.ui.organizeImports">
           	<activeWhen>
				<reference
					definitionId="de.bmw.carit.jnario.spec.Spec.Editor.opened">
				</reference>
			</activeWhen>
      </handler>
    </extension>
    <extension point="org.eclipse.core.expressions.definitions">
        <definition id="de.bmw.carit.jnario.spec.Spec.Editor.opened">
            <and>
                <reference definitionId="isActiveEditorAnInstanceOfXtextEditor"/>
                <with variable="activeEditor">
                    <test property="org.eclipse.xtext.ui.editor.XtextEditor.languageName" 
                        value="de.bmw.carit.jnario.spec.Spec" 
                        forcePluginActivation="true"/>
                </with>        
            </and>
        </definition>
    </extension>
    <extension
