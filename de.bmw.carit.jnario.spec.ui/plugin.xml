<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<plugin>

    <extension
            point="org.eclipse.ui.editors">
        <editor
              class="de.bmw.carit.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.ui.editor.XtextEditor"
              contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
              default="true"
              extensions="spec"
              icon="icons/spec_file.png"
              id="de.bmw.carit.jnario.spec.Spec"
              name="Spec Editor">
        </editor>
    </extension>
    <extension
        point="org.eclipse.ui.handlers">
        <handler
            class="de.bmw.carit.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclarationHandler"
            commandId="org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclaration">
            <activeWhen>
                <reference
                    definitionId="de.bmw.carit.jnario.spec.Spec.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
        <handler
            class="de.bmw.carit.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.ui.editor.handler.ValidateActionHandler"
            commandId="de.bmw.carit.jnario.spec.Spec.validate">
         <activeWhen>
            <reference
                    definitionId="de.bmw.carit.jnario.spec.Spec.Editor.opened">
            </reference>
         </activeWhen>
      </handler>
            <handler
            class="de.bmw.carit.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.xtend2.ui.edit.OrganizeImportsHandler"
            commandId="org.eclipse.xtext.xbase.ui.organizeImports">
           	<activeWhen>
				<reference
					definitionId="de.bmw.carit.jnario.spec.Spec.Editor.opened">
				</reference>
			</activeWhen>
      </handler>
    </extension>
    <extension point="org.eclipse.core.expressions.definitions">
        <definition id="de.bmw.carit.jnario.spec.Spec.Editor.opened">
            <and>
                <reference definitionId="isActiveEditorAnInstanceOfXtextEditor"/>
                <with variable="activeEditor">
                    <test property="org.eclipse.xtext.ui.editor.XtextEditor.languageName" 
                        value="de.bmw.carit.jnario.spec.Spec" 
                        forcePluginActivation="true"/>
                </with>        
            </and>
        </definition>
    </extension>
    <extension
            point="org.eclipse.ui.preferencePages">
        <page
            class="de.bmw.carit.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
            id="de.bmw.carit.jnario.spec.Spec"
            name="Spec">
            <keywordReference id="de.bmw.carit.jnario.spec.ui.keyword_Spec"/>
        </page>
        <page
            category="de.bmw.carit.jnario.spec.Spec"
            class="de.bmw.carit.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.ui.editor.syntaxcoloring.SyntaxColoringPreferencePage"
            id="de.bmw.carit.jnario.spec.Spec.coloring"
            name="Syntax Coloring">
            <keywordReference id="de.bmw.carit.jnario.spec.ui.keyword_Spec"/>
        </page>
        <page
            category="de.bmw.carit.jnario.spec.Spec"
            class="de.bmw.carit.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.ui.editor.templates.XtextTemplatePreferencePage"
            id="de.bmw.carit.jnario.spec.Spec.templates"
            name="Templates">
            <keywordReference id="de.bmw.carit.jnario.spec.ui.keyword_Spec"/>
        </page>
    </extension>
    <extension
            point="org.eclipse.ui.propertyPages">
        <page
            class="de.bmw.carit.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
            id="de.bmw.carit.jnario.spec.Spec"
            name="Spec">
            <keywordReference id="de.bmw.carit.jnario.spec.ui.keyword_Spec"/>
            <enabledWhen>
	            <adapt type="org.eclipse.core.resources.IProject"/>
			</enabledWhen>
	        <filter name="projectNature" value="org.eclipse.xtext.ui.shared.xtextNature"/>
        </page>
    </extension>
    <extension
        point="org.eclipse.ui.keywords">
        <keyword
            id="de.bmw.carit.jnario.spec.ui.keyword_Spec"
            label="Spec"/>
    </extension>
    <extension
         point="org.eclipse.ui.commands">
      <command
            description="Trigger expensive validation"
            id="de.bmw.carit.jnario.spec.Spec.validate"
            name="Validate">
      </command>
    </extension>
    <extension point="org.eclipse.ui.menus">
        <menuContribution
            locationURI="popup:#TextEditorContext?after=group.edit">
             <command
                 commandId="de.bmw.carit.jnario.spec.Spec.validate"
                 style="push"
                 tooltip="Trigger expensive validation">
            <visibleWhen checkEnabled="false">
                <reference
                    definitionId="de.bmw.carit.jnario.spec.Spec.Editor.opened">
                </reference>
            </visibleWhen>
         </command>  
         </menuContribution>
    </extension>
    <extension point="org.eclipse.ui.menus">
		<menuContribution locationURI="popup:#TextEditorContext?endof=group.find">
			<command commandId="org.eclipse.xtext.ui.editor.FindReferences">
				<visibleWhen checkEnabled="false">
                	<reference definitionId="de.bmw.carit.jnario.spec.Spec.Editor.opened">
                	</reference>
            	</visibleWhen>
			</command>
		</menuContribution>
	</extension>
	<extension point="org.eclipse.ui.handlers">
	    <handler
            class="de.bmw.carit.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.ui.editor.findrefs.FindReferencesHandler"
            commandId="org.eclipse.xtext.ui.editor.FindReferences">
            <activeWhen>
                <reference
                    definitionId="de.bmw.carit.jnario.spec.Spec.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
    </extension>   

<!-- adding resource factories -->

	<extension
		point="org.eclipse.emf.ecore.extension_parser">
		<parser
			class="de.bmw.carit.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.resource.IResourceFactory"
			type="spec">
		</parser>
	</extension>
	<extension point="org.eclipse.xtext.extension_resourceServiceProvider">
        <resourceServiceProvider
            class="de.bmw.carit.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.ui.resource.IResourceUIServiceProvider"
            uriExtension="spec">
        </resourceServiceProvider>
    </extension>



   <extension
         point="org.eclipse.xtext.builder.participant">
      <participant
            class="de.bmw.carit.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.builder.IXtextBuilderParticipant">
      </participant>
   </extension>
   <extension
            point="org.eclipse.ui.preferencePages">
        <page
            category="de.bmw.carit.jnario.spec.Spec"
            class="de.bmw.carit.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.builder.preferences.BuilderPreferencePage"
            id="de.bmw.carit.jnario.spec.Spec.compiler.preferencePage"
            name="Compiler">
            <keywordReference id="de.bmw.carit.jnario.spec.ui.keyword_Spec"/>
        </page>
    </extension>
    <extension
            point="org.eclipse.ui.propertyPages">
        <page
            category="de.bmw.carit.jnario.spec.Spec"
            class="de.bmw.carit.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.builder.preferences.BuilderPreferencePage"
            id="de.bmw.carit.jnario.spec.Spec.compiler.propertyPage"
            name="Compiler">
            <keywordReference id="de.bmw.carit.jnario.spec.ui.keyword_Spec"/>
            <enabledWhen>
	            <adapt type="org.eclipse.core.resources.IProject"/>
			</enabledWhen>
	        <filter name="projectNature" value="org.eclipse.xtext.ui.shared.xtextNature"/>
        </page>
    </extension>

	<!-- Quick Outline -->
	<extension
		point="org.eclipse.ui.handlers">
		<handler 
			class="de.bmw.carit.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.ui.editor.outline.quickoutline.ShowQuickOutlineActionHandler"
			commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline">
			<activeWhen>
				<reference
					definitionId="de.bmw.carit.jnario.spec.Spec.Editor.opened">
				</reference>
			</activeWhen>
		</handler>
	</extension>
	<extension
		point="org.eclipse.ui.commands">
		<command
			description="Open the quick outline."
			id="org.eclipse.xtext.ui.editor.outline.QuickOutline"
			name="Quick Outline">
		</command>
	</extension>
	<extension point="org.eclipse.ui.menus">
		<menuContribution
			locationURI="popup:#TextEditorContext?after=group.open">
			<command commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline"
				style="push"
				tooltip="Open Quick Outline">
				<visibleWhen checkEnabled="false">
					<reference definitionId="de.bmw.carit.jnario.spec.Spec.Editor.opened"/>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>
   <!-- quickfix marker resolution generator -->
   <extension
         point="org.eclipse.ui.ide.markerResolution">
      <markerResolutionGenerator
            class="de.bmw.carit.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator">
      </markerResolutionGenerator>
   </extension>

   	<!-- Rename Refactoring -->
	<extension point="org.eclipse.ui.handlers">
		<handler 
			class="de.bmw.carit.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.ui.refactoring.ui.IRenameElementHandler"
			commandId="org.eclipse.xtext.ui.refactoring.RenameElement">
			<activeWhen>
				<reference
					definitionId="de.bmw.carit.jnario.spec.Spec.Editor.opened">
				</reference>
			</activeWhen>
		</handler>
	</extension>
    <extension point="org.eclipse.ui.menus">
         <menuContribution
            locationURI="popup:#TextEditorContext?after=group.edit">
         <command commandId="org.eclipse.xtext.ui.refactoring.RenameElement"
               style="push">
            <visibleWhen checkEnabled="false">
               <reference
                     definitionId="de.bmw.carit.jnario.spec.Spec.Editor.opened">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension point="org.eclipse.ui.preferencePages">
	    <page
	        category="de.bmw.carit.jnario.spec.Spec"
	        class="de.bmw.carit.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.ui.refactoring.ui.RefactoringPreferencePage"
	        id="de.bmw.carit.jnario.spec.Spec.refactoring"
	        name="Refactoring">
	        <keywordReference id="de.bmw.carit.jnario.spec.ui.keyword_Spec"/>
