	</extension>

  <extension point="org.eclipse.compare.contentViewers">
    <viewer id="de.bmw.carit.jnario.spec.Spec.compare.contentViewers"
            class="de.bmw.carit.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.ui.compare.InjectableViewerCreator"
            extensions="spec">
    </viewer>
  </extension>
  <extension point="org.eclipse.compare.contentMergeViewers">
    <viewer id="de.bmw.carit.jnario.spec.Spec.compare.contentMergeViewers"
