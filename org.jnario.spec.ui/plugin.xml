   	<!-- Rename Refactoring -->
	<extension point="org.eclipse.ui.handlers">
		<handler 
			class="org.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.ui.refactoring.ui.IRenameElementHandler"
			commandId="org.eclipse.xtext.ui.refactoring.RenameElement">
			<activeWhen>
				<reference
					definitionId="org.jnario.spec.Spec.Editor.opened">
				</reference>
			</activeWhen>
		</handler>
	</extension>
    <extension point="org.eclipse.ui.menus">
         <menuContribution
            locationURI="popup:#TextEditorContext?after=group.edit">
         <command commandId="org.eclipse.xtext.ui.refactoring.RenameElement"
               style="push">
            <visibleWhen checkEnabled="false">
               <reference
                     definitionId="org.jnario.spec.Spec.Editor.opened">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension point="org.eclipse.ui.preferencePages">
	    <page
	        category="org.jnario.spec.Spec"
	        class="org.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.ui.refactoring.ui.RefactoringPreferencePage"
	        id="org.jnario.spec.Spec.refactoring"
	        name="Refactoring">
	        <keywordReference id="org.jnario.spec.ui.keyword_Spec"/>
	    </page>
	</extension>

  <extension point="org.eclipse.compare.contentViewers">
    <viewer id="org.jnario.spec.Spec.compare.contentViewers"
            class="org.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.ui.compare.InjectableViewerCreator"
            extensions="spec">
    </viewer>
  </extension>
  <extension point="org.eclipse.compare.contentMergeViewers">
    <viewer id="org.jnario.spec.Spec.compare.contentMergeViewers"
            class="org.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.ui.compare.InjectableViewerCreator"
            extensions="spec" label="Spec Compare">
     </viewer>
  </extension>
  <extension point="org.eclipse.ui.editors.documentProviders">
    <provider id="org.jnario.spec.Spec.editors.documentProviders"
            class="org.jnario.spec.ui.SpecExecutableExtensionFactory:org.eclipse.xtext.ui.editor.model.XtextDocumentProvider"
            extensions="spec">
    </provider>
  </extension>
  
  
   <extension point="org.eclipse.core.runtime.adapters">
     <factory 
        class="org.jnario.spec.ui.SpecExecutableExtensionFactory:org.jnario.spec.ui.launching.SpecJavaElementDelegateAdapterFactory"
        adaptableType="org.eclipse.ui.IFileEditorInput">
        <adapter type="org.jnario.spec.ui.launching.SpecJavaElementDelegate"/>
     </factory>
     <factory 
        class="org.jnario.spec.ui.SpecExecutableExtensionFactory:org.jnario.spec.ui.launching.SpecJavaElementDelegateAdapterFactory"
        adaptableType="org.eclipse.ui.IEditorPart">
        <adapter type="org.jnario.spec.ui.launching.SpecJavaElementDelegate"/>
     </factory>
     <factory 
        class="org.jnario.spec.ui.SpecExecutableExtensionFactory:org.jnario.spec.ui.launching.SpecJavaElementDelegateAdapterFactory" 
        adaptableType="org.eclipse.core.resources.IResource">
        <adapter type="org.jnario.spec.ui.launching.SpecJavaElementDelegate"/>
     </factory>
     <factory 
        class="org.jnario.spec.ui.SpecExecutableExtensionFactory:org.jnario.spec.ui.launching.SpecJavaElementDelegateAdapterFactory"
        adaptableType="org.jnario.spec.ui.launching.SpecJavaElementDelegate">
        <adapter type="org.eclipse.jdt.core.IJavaElement"/>
     </factory>
  </extension>
  
  <extension
         point="org.eclipse.debug.ui.launchShortcuts">
      <shortcut
            label="%JUnitShortcut.label"
            icon="$nl$/icons/julaunch.gif"
            helpContextId="org.eclipse.jdt.junit.launch_shortcut"
            class="org.jnario.spec.ui.launching.SpecJUnitLaunchShortcut"
            modes="run, debug"
            id=".junitShortcut">
         <contextualLaunch>
            <enablement>
               <with variable="selection">
                  <count value="1"/>
               	  <iterate>
               	     <and>
               	       <not><adapt type="org.eclipse.jdt.core.IJavaElement"/></not>
                       <adapt type="org.jnario.spec.ui.launching.SpecJavaElementDelegate">
	                     <adapt type="org.eclipse.jdt.core.IJavaElement">
			                <test property="org.eclipse.jdt.core.isInJavaProject"/>
			                <test property="org.eclipse.jdt.core.hasTypeOnClasspath" value="junit.framework.Test"/>
			                <test property="org.eclipse.jdt.junit.canLaunchAsJUnit" forcePluginActivation="true"/>
			             </adapt>
		               </adapt>
		             </and>
		          </iterate>
               </with>
            </enablement>
         </contextualLaunch>
         <configurationType
               id="org.eclipse.jdt.junit.launchconfig">
         </configurationType>
         <description
               description="%DebugJUnitLaunchShortcut.description"
               mode="debug">
         </description>
         <description
               description="%RunJUnitLaunchShortcut.description"
               mode="run">
         </description>
      </shortcut>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchShortcuts">
      <shortcut
            class="org.jnario.spec.ui.launching.SpecJUnitPDELaunchShortcut"
            icon="$nl$/icons/julaunchpgn.gif"
            id="org.jnario.spec.ui.launching.junitPdeShortcut"
            label="%launcher.junit.name"
            modes="run, debug">
         <contextualLaunch>
            <enablement>
               <with variable="selection">
                  <count value="1"/>
               	  <iterate>
               	     <and>
               	       <not><adapt type="org.eclipse.jdt.core.IJavaElement"/></not>
                       <adapt type="org.jnario.spec.ui.launching.SpecJavaElementDelegate">
                         <adapt type="org.eclipse.jdt.core.IJavaElement">
		                   <test property="org.eclipse.jdt.core.isInJavaProjectWithNature" value="org.eclipse.pde.PluginNature"/>
		                   <test property="org.eclipse.jdt.core.hasTypeOnClasspath" value="junit.framework.Test"/>
		                   <test property="org.eclipse.jdt.junit.canLaunchAsJUnit" forcePluginActivation="true"/>
		                 </adapt>
                       </adapt>
                     </and>
		          </iterate>
               </with>
            </enablement>
         </contextualLaunch>
         <configurationType
               id="org.eclipse.pde.ui.JunitLaunchConfig">
         </configurationType>
         <description
               description="%RunJUnitPluginLaunchShortcut.description"
               mode="run">
         </description>
         <description
               description="%DebugJUnitPluginLaunchShortcut.description"
               mode="debug">
         </description>
      </shortcut>
    </extension>  
   
    <extension point="org.eclipse.jdt.core.classpathContainerInitializer">            
