			id="org.eclipse.xtend.XTEND_CONTAINER"                                                        
			class="org.eclipse.xtext.xtend2.ui.buildpath.XtendContainerInitializer"/>                           
	</extension>
	<extension
         point="org.eclipse.jdt.ui.classpathContainerPage">
      <classpathContainerPage
            name="%XtendLibrary_name"
            class="org.eclipse.xtext.xtend2.ui.buildpath.XtendContainerWizardPage"
            id="org.eclipse.xtend.XTEND_CONTAINER">
      </classpathContainerPage>
   </extension>
       <extension
         point="org.eclipse.ui.contexts">
      <context
            description="%SpecContext_description"
            id="org.jnario.spec.ui.SpecEditorScope"
            name="%SpecContext_name"
            parentId="org.eclipse.xtext.ui.XtextEditorScope">
      </context>
   </extension>
    <extension
         point="org.eclipse.ui.bindings">
      <key
            contextId="org.jnario.spec.ui.SpecEditorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+O"
            commandId="org.eclipse.xtext.xbase.ui.organizeImports">
      </key>
   </extension>
       <extension point="org.eclipse.ui.menus">
        <menuContribution
            locationURI="popup:#TextEditorContext?after=group.edit">
             <command
                 commandId="org.eclipse.xtext.xbase.ui.organizeImports"
                 style="push"
                 tooltip="Organize Imports">
            <visibleWhen checkEnabled="false">
                <reference
					definitionId="org.jnario.spec.Spec.Editor.opened">
                </reference>
            </visibleWhen>
         </command>  
         </menuContribution>
    </extension>
       <extension
         id="org.jnario.spec.ui.wizard"
         name="newSpecClass"
         point="org.eclipse.ui.newWizards">
      <category
            id="org.jnario.spec.ui.wizards"
            name="Spec">
      </category>
      <wizard
            category="org.jnario.spec.ui.wizards"
            icon="icons/spec_file.png"
            id="org.jnario.spec.ui.wizards.NewSpecWizard"
            name="%NewSpec.label">
            <class class="org.jnario.spec.ui.SpecExecutableExtensionFactory">
				<parameter name="javatype" value="true" />
				<parameter name="guicekey" value="org.jnario.spec.ui.wizards.NewSpecWizard" />
			</class>
			<description>
            	%NewSpec.description
         	</description>
      </wizard>
   </extension>
   <extension point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <newWizardShortcut
               id="org.jnario.spec.ui.wizards.NewSpecWizard">
         </newWizardShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaBrowsingPerspective">
         <newWizardShortcut
               id="org.jnario.spec.ui.wizards.NewSpecWizard">
         </newWizardShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.eclipse.pde.ui.PDEPerspective">
         <newWizardShortcut
               id="org.jnario.spec.ui.wizards.NewSpecWizard">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>
</plugin>
